#postgresql.conf
{% import 'postgresql/postgres-slave/slave-map.sls' as slave with context %}

listen_addresses = 'localhost,{{ slave.ip_pg_slave }}'
wal_level = 'hot_standby'
archive_mode = on
archive_command = 'cd .'
max_wal_senders = 1
hot_standby = on
unix_socket_directories='/var/run/postgresql'
